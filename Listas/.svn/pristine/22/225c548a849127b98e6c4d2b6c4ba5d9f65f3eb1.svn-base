    private void InsertarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_InsertarActionPerformed
        InsertarBD a = new InsertarBD();
        String Nombre = CajaTexto.getText();
        a.InsertarCliente(Nombre);
        
    }//GEN-LAST:event_InsertarActionPerformed

    private void BuscarNombreActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_BuscarNombreActionPerformed
        Buscar a = new Buscar();
        
        String Nombre= CajaTexto.getText();
        ResultSet rs=a.BuscarNombre(Nombre);
        modeloLista.clear();
       try {
           while(rs.next()){
               modeloLista.addElement(rs.getString("Nombre_Cliente"));       
           }
           
       } catch (SQLException ex) {
           Logger.getLogger(Lista1.class.getName()).log(Level.SEVERE, null, ex);
       }
        
    }//GEN-LAST:event_BuscarNombreActionPerformed

    private void CajaTextoKeyPressed(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_CajaTextoKeyPressed
        
        modeloLista.clear();
        Buscar a = new Buscar();
        String Nombre= CajaTexto.getText();
        ResultSet rs=a.BuscarNombre(Nombre);
       
       try {
           while(rs.next()){
               modeloLista.addElement(rs.getString("Nombre_Cliente"));       
           }
           
       } catch (SQLException ex) {
           Logger.getLogger(Lista1.class.getName()).log(Level.SEVERE, null, ex);
       }
    }//GEN-LAST:event_CajaTextoKeyPressed

